                    </a>
                </div>
            <%}else{%>

                <div class="iniciar-sesion">
                    <i class="fas fa-sign-in-alt"></i>
                    <a href="/user/login-form">Iniciar sesión</a>
                </div>
                <div class="registro">
                    <i class="fas fa-user"></i>
                    <a href="/user/registration-form" >Registrate</a>
