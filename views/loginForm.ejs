    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/header_footer.css">
    <link rel="stylesheet" href="/css/loginForm.css">
    <link rel="stylesheet" href="/css/cartStyles.css">
    <title>Login Page</title>
</head>

<body>
    <div class="grilla-contenedora">
        <%-include('./partials/header')%>
        <main>
            <form action="" method="POST">
                
                <div class="box-datos">
                    <label for="email">Email:</label>
                    <input type="text" class="<%=(locals.errors)?'invalid':''%>" name="email" id="email" style="text-transform:uppercase"
                     value="<%=(locals.oldDataLogin)? oldDataLogin:''%>">
                     <% if(locals.errors && errors.email){%>
                        <p class="error">
                            <%=errors.email.msg%>
                        </p>
                    <%}%>
                        
                </div>
                <div class="box-datos">
                    <label for="password">Ingrese la contrase√±a:</label>
                    <input type="password" name="password" id="password" class="<%=(locals.errors)?'invalid':''%>">
                    <% if(locals.errors && errors.password){%>
                        <p class="error">
                            <%=errors.password.msg%>
                        </p>
                    <%}%>
                </div>
                <div class="botones">
                    <button type="submit">Ingresar</button>
                </div>
                <div class="checkbox">
                    <div class="option-cb">
                        <input type="checkbox" name="recordar" value='checked' id="recordarme">Recordarme
                    </div>
                </div>
                <a class='a-forget' href="#">Olvidaste tus datos de acceso?</a>
            </form>
            
        </main>
        <%-include('./partials/footer')%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>